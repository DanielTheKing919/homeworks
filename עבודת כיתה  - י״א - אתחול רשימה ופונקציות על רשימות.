def get_guest_input(message):
    return input(message)

def add_guest(guest_list, guest_name):
    guest_list.append(guest_name)

def insert_guest(guest_list, guest_name, number):
    if number % 2 == 0:
        guest_list.insert(0, guest_name)
    else:
        guest_list.append(guest_name)

def remove_guest(guest_list, guest_name):
    if guest_name in guest_list:
        guest_list.remove(guest_name)
    else:
        print(f"השם {guest_name} לא נמצא ברשימה.")

def print_guest_list(guest_list):
    print("\nרשימת האורחים הסופית:")
    for i, guest in enumerate(guest_list, start=1):
        print(f"{i}. {guest}")

def main():
    guest_list = []

    for i in range(3):
        name = get_guest_input(f"הכנס שם אורח מספר {i+1}: ")
        add_guest(guest_list, name)

    name = get_guest_input("הכנס שם אורח נוסף: ")
    number = int(input("הכנס מספר כדי לקבוע את מיקום ההוספה: "))
    insert_guest(guest_list, name, number)

    name = get_guest_input("הכנס שם אורח להסרה: ")
    remove_guest(guest_list, name)

    while len(guest_list) < 12:
        name = get_guest_input(f"הכנס שם אורח נוסף (נוכחיים {len(guest_list)}): ")
        add_guest(guest_list, name)

    print_guest_list(guest_list)


if __name__ == "__main__":
    main()
